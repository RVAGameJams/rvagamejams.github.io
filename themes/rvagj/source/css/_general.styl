html, body
    width: 100%
    height: 100%
    margin: 0
    background-color: white
    
body
    display: flex
    flex-direction: column
    align-items: center
    font-family: font-body
    font-size: 1.1rem

.hidden
    display: none
    
h1
    @extend .header-font
    padding-bottom: 3px
    border-bottom: 3px solid
h2
    @extend h1
    color: rva-blue
    
p
    margin-top: 0
    margin-bottom: 1em

.container
    width: container-size
    height: inherit
    min-height: fit-content
    padding-bottom: 200px
    box-shadow: 0px 6px 18px 3px rgba(0, 0, 0, 0.29)
    .container-padding
        padding: container-padding
        padding-bottom: 0
    
    @media (max-width: adaptive-screen-size)
        width: 100%
        box-shadow: none
        .container-padding
            padding: container-padding-thin
    