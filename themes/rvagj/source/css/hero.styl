.hero
    width: container-size
    height: 450px
    
    .image
        width: 100%
        height: 100%
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        
    title-height = 80px
    title-padding = 20px
    title-padding-left = title-padding + 14px
    triangle-size = title-height + title-padding
    .title
        .content
            color: white
            background-color: rva-red
            width: 'calc(100% - %s)' % (triangle-size + 34px)
            height: title-height
            margin-top: -1 * triangle-size
            padding-left: title-padding-left
            padding-top: title-padding
            font-family: font-header 
            text-transform: uppercase
            font-size: 3rem
            font-weight: bold
            letter-spacing: 5px
        &:before
            content: ' '
            position: absolute
            margin-top: -1 * triangle-size
            triangleLeft(triangle-size, rva-red)
        &:after
            content: ' '
            display: inline-block
            float: right
            margin-top: -1 * triangle-size
            triangleLeft(triangle-size, rva-red)