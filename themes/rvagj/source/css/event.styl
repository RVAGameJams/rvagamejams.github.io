.event-container
    display: flex
    flex-wrap: wrap
    margin-bottom: 20px
    & > div
        flex-grow: 1
        flex-basis: 0
        min-width: 354px
        margin: 0px 8px
        @media (max-width: 700px) {
            min-width: 70vw
        }
        
    h2
        margin-top: 0
        margin-bottom: 16px
    
    panel-height = 250px
    panel-padding = 12px
    .panel
        display: flex
        flex-direction: column
        background-color: rva-blue
        height: panel-height
        padding: panel-padding
    .main-title
        @extend .header-font
        color: white
        font-size: 1em
        font-weight: bold
        text-transform: uppercase
    .sub-title
        @extend .header-font
        color: white
        font-size: 0.8em
        font-weight: bold
        text-transform: uppercase
        margin-bottom: 10px
    .image
        coveringImage()
    .age
        @extend .header-font
        position: absolute
        background-color: rva-blue
        color: white
        font-size: 0.8em
        letter-spacing: 1px
        padding-top: 6px
        padding-right: 6px
        transform: 'translateY(%s)' % (panel-height - 23px)
    
    info-size = 60px
    infoPanel(icon)
        display: flex
        align-items: center
        height: info-size
        font-size: 0.9em
        color: initial
        text-decoration: none
        transition: 0.3s background-color        
        &:hover
            background-color: lighten(rva-blue, 80%)
        &::before
            content: ' '
            background-image: 'url(%s)' % icon
            background-repeat: no-repeat
            background-position: center
            background-size: 24px
            height: info-size
            width: info-size

    .address
        infoPanel('../img/Map.png')
    .time
        infoPanel('../img/Clock.png')