panel-height = 250px
panel-padding = 12px
event(main-color)
    h2
        color: main-color
    .panel
        display: flex
        flex-direction: column
        background-color: main-color
        height: panel-height
        padding: panel-padding
    .main-title
        @extend .header-font
        color: white
        font-size: 1em
        font-weight: bold
        text-transform: uppercase
    .sub-title
        @extend .header-font
        color: white
        font-size: 0.8em
        font-weight: bold
        text-transform: uppercase
        margin-bottom: 10px
    .image
        coveringImage()
    .age
        @extend .header-font
        position: absolute
        background-color: main-color
        color: white
        font-size: 0.8em
        letter-spacing: 1px
        padding-top: 6px
        padding-right: 6px
        transform: 'translateY(%s)' % (panel-height - 23px)

    info-size = 60px
    infoPanel(icon)
        display: flex
        align-items: center
        height: info-size
        font-size: 0.9em
        color: initial
        text-decoration: none
        white-space: nowrap
        transition: 0.3s background-color
        &:hover
            background-color: lighten(main-color, 80%)
        &::before
            content: ' '
            background-image: 'url(%s)' % icon
            background-repeat: no-repeat
            background-position: center
            background-size: 24px
            height: info-size
            width: info-size

    .address
        infoPanel('../img/Map.png')
    .time
        infoPanel('../img/Clock.png')

.event-container
    display: flex
    flex-wrap: wrap
    margin-bottom: 20px
    & > div
        flex-grow: 1
        flex-basis: 0
        min-width: 354px
        margin: 0px 8px
        margin-top: 10px
        @media (max-width: 700px) {
            min-width: 70vw
        }
        
    h2
        margin-top: 0
        margin-bottom: 16px
                
    &.jam
        event(rva-blue)
    &.monthly
        event(rva-green)
        
    link(main-color)
        @extend .header-font
        display: inline-block;
        width: 80px
        padding: 6px
        padding-left: 24px
        margin-right: 6px
        color: main-color
        text-decoration: none
        font-size: 0.8em
        font-weight: bold
        letter-spacing: 1px
        border: 4px solid main-color
        transition: 0.3s background-color, 0.2s color
        &:hover
            background-color: main-color
            color: white
        &::before
            content: ' '
            position: absolute
            margin-top: -10px
            margin-left: -28px
            triangleTopLeft(22px, main-color)
        & span::before
            content: ' '
            position: absolute
            margin-top: -10px
            margin-left: -28px
            triangleTopLeft(16px, white)
        
    .links
        padding-top: 12px
        > a
            &.facebook
                link(rva-blue)
            &.meetup
                link(rva-red)