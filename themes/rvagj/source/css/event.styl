.event-container
    display: flex
    flex-wrap: wrap
    & > div
        flex-grow: 1
        flex-basis: 0
        min-width: 354px
        // height: 300px
        // &:nth-child(odd)
        //  background: pink
        // &:nth-child(even)
        //  background: orange
        @media (max-width: 700px) {
            min-width: 70vw
        }
    
    panel-height = 250px
    panel-padding = 12px
    .panel
        display: flex
        flex-direction: column
        background-color: rva-blue
        height: panel-height
        padding: panel-padding
    .main-title
        @extend .header-font
        color: white
        font-size: 1em
        font-weight: bold
        text-transform: uppercase
    .sub-title
        @extend .header-font
        color: white
        font-size: 0.8em
        font-weight: bold
        text-transform: uppercase
        margin-bottom: 10px
    .image
        coveringImage()
    .age
        @extend .header-font
        position: absolute
        background-color: rva-blue
        color: white
        font-size: 0.8em
        letter-spacing: 1px
        padding-top: 6px
        padding-right: 6px
        transform: 'translateY(%s)' % (panel-height - 23px)