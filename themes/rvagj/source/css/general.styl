html, body
    height: 100%
    margin: 0
    background-color: white
    
body
    display: flex
    flex-direction: column
    align-items: center
    font-family: font-body
    font-size: 1.1rem;
    
h1
    font-family: font-header
    text-transform: uppercase
    font-size: 2rem;
    letter-spacing: 3px
    padding-bottom: 3px
    border-bottom: 3px solid
h2
    @extend h1
    color: rva-blue

container-padding = 36px
.container
    width: 1225px - 2*container-padding
    min-height: 100%
    padding: container-padding
    box-shadow: 0px 8px 25px 1px rgba(0, 0, 0, 0.278)
    
.float-left
    float: left
.float-right
    float: right
    